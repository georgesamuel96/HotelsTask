<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.animation.ShimmerAnimationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_6sdp">

        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintCircleRadius="@dimen/_50sdp"
            app:shimmer_animation_duration="1500"
            app:shimmer_color="@color/grey_1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/img_bg_radius"
                app:civ_circle_background_color="@color/grey_1" />

        </io.supercharge.shimmerlayout.ShimmerLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_text1"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="32dp"
                app:layout_constraintCircleRadius="@dimen/_50sdp"
                app:shimmer_animation_duration="1500"
                app:shimmer_color="@color/grey_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_1"
                    android:text="" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_text2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="32dp"
                app:layout_constraintCircleRadius="@dimen/_50sdp"
                app:shimmer_animation_duration="1500"
                app:shimmer_color="@color/grey_1"
                android:layout_marginTop="@dimen/_8sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_1"
                    android:text="" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>