<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.features.details.HotelDetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        >
        <ImageView
            android:id="@+id/image_back"
            android:src="@drawable/baseline_keyboard_backspace_white_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/image_hotel_details"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_hotel_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_hotel_address"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/text_actual_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_normal_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>
   <Button
       android:id="@+id/button_open_material_button_screen"
       android:text="@string/open_material_button"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <Button
       android:id="@+id/button_open_custom_behaviour_coordinate_screen"
       android:text="@string/open_custom_behaviour_coordinate"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <Button
       android:id="@+id/button_open_animation"
       android:text="@string/open_animation"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <Button
       android:id="@+id/button_open_constraint"
       android:text="@string/open_constraint"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

</androidx.appcompat.widget.LinearLayoutCompat>